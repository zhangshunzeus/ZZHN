<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/ic_launcher"
        android:padding="5.0dip">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="欢迎来到中振华能"
            android:textColor="#ffffff"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/tv_title_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6.0dip"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="16.0sp"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_login_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/head_layout">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="120.0dip"
            android:layout_height="95.0dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_launcher" />

        <View
            android:id="@+id/view_line_up"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/iv_login_logo"
            android:layout_marginTop="20.0dip"
            android:background="#ffcccccc" />

        <RelativeLayout
            android:id="@+id/rl_login_body_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_up"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip">

            <TextView
                android:id="@+id/tv_login_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号: "
                android:textSize="16.0sp" />

            <EditText
                android:id="@+id/et_login_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_toRightOf="@id/tv_login_phone"
                android:background="@null"
                android:hint="请输入您的手机号码"
                android:textSize="16.0sp" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line_mid"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/rl_login_body_phone"
            android:background="#ffcccccc" />


        -

        <RelativeLayout
            android:id="@+id/rl_login_body_vcode"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_mid"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip">

            <TextView
                android:id="@+id/tv_login_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码: "
                android:textSize="16.0sp" />

            <Button
                android:id="@+id/btn_get_vcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_launcher"
                android:paddingLeft="2.0dip"
                android:text="获取验证码"
                android:textSize="15.0sp" />

            <EditText
                android:id="@+id/et_login_vcode"
                android:layout_width="130.0dip"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_toRightOf="@id/tv_login_password"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="textPassword"
                android:textSize="16.0sp" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line_btom"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@id/rl_login_body_vcode"
            android:background="#ffcccccc" />

        <Button
            android:id="@+id/btn_to_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_btom"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="46.0dip"
            android:background="@drawable/ic_launcher"
            android:text="登 录"
            android:textColor="#ffffff"
            android:textSize="18.0sp" />

    </RelativeLayout>


    -

    <RelativeLayout
        android:id="@+id/rl_login_btm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20.0dip"
        android:orientation="horizontal">

        <View
            android:id="@+id/btn_login_wechat_middle"
            android:layout_width="1.0dip"
            android:layout_height="1.0dip"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_login_qzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6.0dip"
            android:layout_toLeftOf="@id/btn_login_wechat_middle"
            android:background="@drawable/ic_launcher"
            android:text="" />

        <Button
            android:id="@+id/btn_login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12.0dip"
            android:layout_toLeftOf="@id/btn_login_qzone"
            android:background="@drawable/ic_launcher"
            android:text="" />

        <Button
            android:id="@+id/btn_login_sina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_toRightOf="@id/btn_login_wechat_middle"
            android:background="@drawable/ic_launcher"
            android:text="" />

        <Button
            android:id="@+id/btn_login_tencent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_toRightOf="@id/btn_login_sina"
            android:background="@drawable/ic_launcher"
            android:text="" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_login_btm_up"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_login_btm"
        android:layout_marginBottom="16.0dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_login_infos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="使用其它方式登录"
            android:textColor="#ff737373"
            android:textSize="10.0sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="16.0dip"
            android:layout_toLeftOf="@id/btn_login_infos"
            android:background="#ff737373" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="16.0dip"
            android:layout_toRightOf="@id/btn_login_infos"
            android:background="#ff737373" />

    </RelativeLayout>

    <include layout="@layout/loading" />

</RelativeLayout>